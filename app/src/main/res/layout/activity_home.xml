<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/frameLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INFORMAZIONI AULE"
            android:textColor="@color/intestazione"
            android:textSize="24sp"
            app:fontFamily="@font/marko_one" />

        <Button
            android:id="@+id/mappa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vai a mappa aule" />

        <ProgressBar
            android:id="@+id/bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/elencoAule"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frameMappa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INFORMAZIONI AULE"
            android:textColor="@color/intestazione"
            android:textSize="24sp"
            app:fontFamily="@font/marko_one" />

        <Button
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vai a elenco aule" />

    </LinearLayout>

</FrameLayout>