<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bianco"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="10dp"
    android:scrollbars="vertical"
    tools:context=".CreaCodici">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Seleziona corso "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/materieDocente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numeroPartecipanti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero massimo di iscritti"
                    android:inputType="number"
                    android:numeric="integer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numeroOre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ore disponibili"
                    android:inputType="number"
                    android:numeric="integer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numeroGruppi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero di gruppi"
                    android:inputType="number"
                    android:numeric="integer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtNomeGruppo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nome dei gruppi (opzionale)"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_why"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/question" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dataScadenza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleziona la data di scadenza dei gruppi"
                    android:textSize="18sp" />

                <CalendarView
                    android:id="@+id/calendario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:verticalScrollbarPosition="defaultPosition"
                    android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCreaCodici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_layout"
        android:text="Crea i gruppi" />

</LinearLayout>
