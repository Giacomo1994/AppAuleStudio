<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bianco"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="10dp"
    android:scrollbars="vertical"
    tools:context=".CreaCodici">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Seleziona corso "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/materieDocente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <EditText
                android:id="@+id/numeroPartecipanti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="numero massimo di iscritti"
                android:inputType="number"
                android:numeric="integer" />

            <EditText
                android:id="@+id/numeroOre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ore disponibili"
                android:inputType="number"
                android:numeric="integer" />

            <EditText
                android:id="@+id/numeroGruppi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="numero di gruppi"
                android:inputType="number"
                android:numeric="integer" />

            <EditText
                android:id="@+id/txtNomeGruppo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Suffisso gruppo (opzionale*)"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSpiegazione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="*Se lesciato vuoto verrÃ  assegnato ad ogni gruppo un nome formato da un numero progressivo e il nome del corso."
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dataScadenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Seleziona la data scadenza dei gruppi"
                android:textSize="18sp" />

            <CalendarView
                android:id="@+id/calendario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:verticalScrollbarPosition="defaultPosition"
                android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Small" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCreaCodici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_layout"
        android:text="Crea i gruppi" />

</LinearLayout>
