<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_liste"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HomeDocente">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:srcCompat="@drawable/corso" />

    <ListView
        android:id="@+id/elencoCorsi2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/background_liste"
        android:dividerHeight="15dp">

    </ListView>

    <Button
        android:id="@+id/btnCreaCodici"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_layout"
        android:padding="5dp"
        android:text="CREA GRUPPI"
        android:visibility="visible" />
</LinearLayout>